@{
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}

@using System.Data;

<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Payments</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Payments</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">All payments</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Payment List</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="multi-filter-select"
                                   class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>SurName</th>
                                        <th>Bed</th>
                                        <th>Sharing</th>
                                        <th>Hostel</th>
                                        <th>Rent</th>
                                        <th>Payment Date</th>
                                        <th>Payment Duedate</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Office</th>
                                        <th>Age</th>
                                        <th>Age</th>
                                        <th>Age</th>
                                        <th>Age</th>
                                        <th>Start date</th>
                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <tr>
                                            <td>@(dr["Person_Name"]?.ToString() ?? "N/A")</td>
                                            <td>@(dr["Person_SurName"]?.ToString() ?? "N/A")</td>
                                            <td>@(dr["Bed_Number"]?.ToString() ?? "N/A")</td>
                                            <td>@(dr["Room_Sharingtype"]?.ToString() ?? "N/A")</td>
                                            <td>@(dr["PG_Number"]?.ToString() ?? "N/A")</td>
                                            <td>@(dr["Room_Rent"]?.ToString() ?? "N/A")</td>
                                            <td>
                                                @{
                                                    var paymentDate = dr["Payment_Date"] == DBNull.Value ? "N/A" : Convert.ToDateTime(dr["Payment_Date"]).ToString("dd-MM-yyyyy");
                                                }
                                                @paymentDate
                                            </td>
                                            <td>
                                                @{
                                                    var paymentDueDate = dr["Payment_DueDate"] == DBNull.Value ? "N/A" : Convert.ToDateTime(dr["Payment_DueDate"]).ToString("dd-MM-yyyyy");
                                                }
                                                @paymentDate
                                            </td>
                                            <td>
                                                @{
                                                    int paymentStatus = dr["Payment_Status"] != DBNull.Value ? Convert.ToInt32(dr["Payment_Status"]) : 0;

                                                    if (paymentStatus == 0)
                                                    {
                                                        <div class="form-button-action">
                                                            <form id="deleteForm-@dr["ID"]" method="post" asp-area="PG_Payment" asp-controller="PG_Payment" asp-action="UpdatePaymentCompleteStatus" asp-route-Payment_Id="@dr["ID"]">
                                                                <input type="hidden" id="Payment_Id" name="Payment_Id" value="@Convert.ToInt32(dr["ID"])" />
                                                                <button class="btn btn-warning"
                                                                        onclick="confirmDelete('@dr["ID"]')"
                                                                        type="button">
                                                                    <span class="btn-label">
                                                                        <i class="fa fa-exclamation-circle"></i>
                                                                    </span>
                                                                    Accept
                                                                </button>
                                                            </form>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-success">Payment Done</span>
                                                    }
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



<div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Image Preview</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-center">
                <img id="modalImage" src="" style="height:400px;width:250px" alt="Preview" class="img-fluid rounded">
            </div>
        </div>
    </div>
</div>
<script>
    function showImageModal(imageUrl) {
        document.getElementById('modalImage').src = imageUrl;
    }
</script>
