<script>
    $(document).ready(function () {
        var Person_Id = $('#personId').val();  // Get the personId from hidden input field
        // AJAX call to fetch payment history
        $.ajax({
            url: '@Url.Action("SelectPaymentHistoryByPerson", "PG_Person", new { area = "PG_Person" })',
            type: 'GET',
            data: { personId: Person_Id },
            success: function (response) {
@*                 alert(JSON.stringify(response));
                console.log(JSON.stringify(response)); *@
                if (response && response.length > 0) {
                    var tbody = $('#personPaymenthistory');
                    tbody.empty();
                    response.forEach(function (payment) {
                        // Convert payment_Amount to a number for correct formatting
                        var paymentAmount = parseFloat(payment.payment_Amount).toFixed(2);

                        var row = `
                        <tr>
                           @*  <th scope="row">
                                ${payment.person_Id}
                            </th> *@
                                  <td>${formatDate(payment.paymentDate)}</td>
                                      <td>${formatDate(payment.payment_ReceivedDate)}</td>
                             <td>${formatDate(payment.payment_DueDate)}</td>
                            <td >${paymentAmount}</td>
                            <td >
                                <span class="badge ${payment.paymentStatus ? 'badge-success' : 'badge-warning'}">
                                    ${payment.paymentStatus ? 'Completed' : 'Pending'}
                                </span>
                            </td>
                        </tr>`;
                        tbody.append(row);
                    });
                } else {
                    $('#personPaymenthistory').html('<tr><td colspan="4" class="text-center">No payment history available</td></tr>');
                }
            },
            error: function (error) {
                console.log("Error fetching payment history: ", error);
            }
        });

    });

    function formatDate(date) {
        var d = new Date(date);

        // Extract date parts
        var day = String(d.getDate()).padStart(2, '0');        // Get day, pad with 0 if necessary
        var month = String(d.getMonth() + 1).padStart(2, '0'); // Get month, pad with 0 if necessary (getMonth() is 0-based)
        var year = d.getFullYear();

        // Extract time parts
        var hours = String(d.getHours()).padStart(2, '0');
        var minutes = String(d.getMinutes()).padStart(2, '0');

        // Return formatted date and time
        return `${day}-${month}-${year}`;
    }

</script>



<script>
    function confirmDelete(OwnerId) {
        Swal.fire({
            title: 'Are you sure?',
            text: `You won't be able to revert this!`,
            icon: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes, delete it!',
            cancelButtonText: 'No, cancel!',
            reverseButtons: true
        }).then((result) => {
            if (result.isConfirmed) {
                // Submit the form for the specific adminId
                document.getElementById(`deleteForm-${OwnerId}`).submit();
            }
        });
    }

    $(document).ready(function () {
        var message = '@TempData["Message"]';
        var alertType = '@TempData["AlertType"]';

        if (message) {
            Swal.fire({
                icon: alertType,
                title: message,
                showConfirmButton: true
            }).then((result) => {
                // Reload the page after the alert is confirmed
                if (result.isConfirmed) {
                    location.reload();
                }
            });
        }
    });
</script>
