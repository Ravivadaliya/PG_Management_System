@{
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}

@using System.Data;
@model DataTable
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Staff</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#">
                        <i class="icon-home"></i>
                    </a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">Staff</a>
                </li>
                <li class="separator">
                    <i class="icon-arrow-right"></i>
                </li>
                <li class="nav-item">
                    <a href="#">All Staff</a>
                </li>
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Staff View and Delete</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="multi-filter-select"
                                   class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Staff Name</th>
                                        <th>Surname</th>
                                        <th>Mobile No.</th>
                                        <th>Address</th>
                                        <th>City</th>
                                        <th>Gender</th>
                                        @* <th>Start date</th> *@
                                        @* <th>Salary</th> *@
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Office</th>
                                        <th>Age</th>
                                        <th>Start date</th>
                                        <th>Salary</th>
                                    </tr>
                                </tfoot>
                                <tbody> 
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <tr>
                                            <td>@dr["Staff_Name"]</td>
                                            <td>@dr["Staff_SurName"]</td>
                                            <td>@dr["Staff_Mobile_Number"]</td>
                                            <td>@dr["Staff_Address"]</td>
                                            <td>@dr["Staff_City"]</td>
                                            <td>@dr["Staff_Gender"]</td>
                                            <td>
                                                <div class="form-button-action">
                                                    <a asp-area="PG_Staff" class="btn btn-link btn-primary btn-lg" asp-controller="PG_Staff" asp-action="Add" asp-route-Id="@Convert.ToInt32(dr["Id"])">
                                                        <i class="fa fa-edit"></i>
                                                    </a>
                                                    <form id="deleteForm-@dr["Id"]" method="post" asp-area="PG_Staff" asp-controller="PG_Staff" asp-action="DeleteStaff">
                                                        <input type="hidden" name="Id" value="@Convert.ToInt32(dr["Id"])" />
                                                        <button type="button"
                                                        onclick="confirmDelete('@dr["Id"]')"
                                                        title=""
                                                        class="btn btn-link btn-danger mt-2"
                                                        data-original-title="Remove">
                                                            <i class="fa fa-times"></i>
                                                        </button>
                                                    </form>

                                                </div>
                                            </td>
                                            @* <td>
                                            <div class="form-button-action">
                                                <button type="button"
                                                        title=""
                                                        class="btn btn-link btn-primary btn-lg"
                                                        data-original-title="Edit Task">
                                                    <i class="fas fa-eye"></i>
                                                </button>
                                                <button type="button"
                                                        title=""
                                                        class="btn btn-link btn-primary btn-lg"
                                                        data-original-title="Edit Task">
                                                    <i class="fa fa-edit"></i>
                                                </button>
                                                <button type="button"
                                                        title=""
                                                        id="alert_demo_7"
                                                        class="btn btn-link btn-danger"
                                                        data-original-title="Remove">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </div>
                                        </td> *@
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

