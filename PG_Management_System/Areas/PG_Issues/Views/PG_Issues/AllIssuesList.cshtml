@{
    Layout = "~/Views/Shared/Admin/AdminLayout.cshtml";
}
@using System.Data;
<div class="container">
    <div class="page-inner">
        <div class="page-header">
            <h3 class="fw-bold mb-3">Issues</h3>
            <ul class="breadcrumbs mb-3">
                <li class="nav-home">
                    <a href="#"> <i class="icon-home"></i> </a>
                </li>
                <li class="separator"><i class="icon-arrow-right"></i></li>
                <li class="nav-item"><a href="#">Issues</a></li>
                <!-- <li class="separator"><i class="icon-arrow-right"></i></li> -->
                <!-- <li class="nav-item"><a href="#">Basic Tables</a></li> -->
            </ul>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h4 class="card-title">Issue List </h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="multi-filter-select"
                                   class="display table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Image</th>
                                        <th>Description</th>
                                        <th>Room Number</th>
                                        <th>Building Number</th>
                                        <th>Person Name</th>
                                        @* <th>Salary</th> *@
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tfoot>
                                    <tr>
                                        <th>Name</th>
                                        <th>Position</th>
                                        <th>Office</th>
                                        <th>Age</th>
                                        <th>Start date</th>
                                        @* <th>Salary</th> *@

                                    </tr>
                                </tfoot>
                                <tbody>
                                    @foreach (DataRow dr in Model.Rows)
                                    {
                                        <tr>
                                            <td>@dr["Issue_ImgPath"]</td>
                                            <td>@dr["Issue_Description"]</td>
                                            <td>@dr["Room_Number"]</td>
                                            <td>@dr["Hostel_Building_Number"]</td>
                                            <td>@dr["Person_Name"]</td>
                                            <td>
                                                <div class="form-button-action">
                                                    <button type="button"
                                                            title=""
                                                            class="btn btn-link btn-primary btn-lg"
                                                            data-original-title="Edit Task">
                                                        <i class="fas fa-eye"></i>
                                                    </button>
                                                    <button type="button"
                                                            title=""
                                                            class="btn btn-link btn-primary btn-lg"
                                                            data-original-title="Edit Task">
                                                        <i class="fa fa-edit"></i>
                                                    </button>
                                                    <button type="button"
                                                    @*data-bs-toggle="modal"
                                                        data-bs-target="#addRowModal" *@
                                                            title=""
                                                            id="alert_demo_7"
                                                            class="btn btn-link btn-danger"
                                                            data-original-title="Remove">
                                                        <i class="fa fa-times"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>